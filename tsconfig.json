{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "removeComments": true,
    "paths": {
      "@/*": [
        "./shared/*"
      ],
      "@/assets/*": ["./shared/assets/*"],
      "@/components/*": ["./shared/components/*"],
      "@/context/*": ["./shared/context/*"],
      "@/lib/*": ["./shared/lib/*"],
      "@/types/*": ["./shared/types/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
